{
    "name": "Dipole_inpat",
    "n_gpu": 1,

    "arch": {
        "type": "Dipole",
        "args": {
        }
    },
    "hyper_params":{
        "day_dim" : 512,
        "rnn_hidden": 256,
        "keep_prob": 1.0
    },
    "data_loader": {
        "args":{
            "batch_size": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.001
            }
    },
    "loss": "CrossEntropyLoss",
    "metrics": [
        "accuracy", "roc_auc",  "f1", "confusion"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10
    }
}
